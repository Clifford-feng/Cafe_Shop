//tsconfig.json：
//主要的 TypeScript 配置文件
//配置编译选项，如目标 ECMAScript 版本、模块系统等
//指定要包含的源代码文件



{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "cafe-project/client/src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}

